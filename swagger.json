        "description": "Adiciona um novo feedback para um produto",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["produto_id", "usuario_id", "nota", "comentario"],
                "properties": {
                  "produto_id": {
                    "type": "integer",
                    "example": 1,
                    "description": "ID do produto avaliado"
                  },
                  "usuario_id": {
                    "type": "integer",
                    "example": 1,
                    "description": "ID do usuário que está avaliando"
                  },
                  "nota": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 5,
                    "example": 5,
                    "description": "Nota de 0 a 5"
                  },
                  "comentario": {
                    "type": "string",
                    "maxLength": 1000,
